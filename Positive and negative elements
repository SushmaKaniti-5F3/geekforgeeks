class Solution{
  public:
    vector<int> arranged(int a[],int n)
    {
        vector<int>pos;
        vector<int>neg;
        vector<int>ans;
        for(int i=0;i<n;i++)
        {
            if(a[i]>0)pos.emplace_back(a[i]);
            else neg.emplace_back(a[i]);
        }
        for(int i=0;i<(n/2);i++)
        {
            ans.push_back(pos[i]);
            ans.push_back(neg[i]);
        }
        return ans;
    }
};
